@model Candidate_Portal_Auth.Models.ViewModels.CandidateVM
@{
    ViewData["Title"] = "Edit";
}
<div class="row">
    <div class="col">
        <h2 class="display-5">Edit Candidate</h2>
        <form asp-action="Edit" asp-controller="Candidates" enctype="multipart/form-data" method="post">
            <div class="row">
                <div class="col-6">
                    <input asp-for="CandidateId" type="hidden"/>
                    <input asp-for="Image" type="hidden"/>
                    <div class="row mb-2">
                        <label asp-for="CandidateName" class="col-form-label col-3"></label>
                        <div class="col-6">
                            <input asp-for="CandidateName" class="form-control form-control-sm" />
                        </div>
                        <div class="col-3">
                            <span asp-validation-for="CandidateName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label asp-for="DateOfBirth" class="col-form-label col-3"></label>
                        <div class="col-6">
                            <input asp-for="DateOfBirth" class="form-control form-control-sm" type="date" />
                        </div>
                        <div class="col-3">
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label asp-for="Phone" class="col-form-label col-3"></label>
                        <div class="col-6">
                            <input asp-for="Phone" class="form-control form-control-sm" />
                        </div>
                        <div class="col-3">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label asp-for="ImagePath" class="col-form-label col-3"></label>
                        <div class="col-6"> 
                            <input asp-for="ImagePath" class="form-control form-control-sm" type="file" />
                            <img class="rounded-circle" src="@Model.Image" width="32">
                        </div>
                        <div class="col-3">
                            <span asp-validation-for="ImagePath" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label asp-for="Fresher" class="col-form-label col-3"></label>
                        <div class="col-6 mt-2">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Fresher" />
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <h5>Select Skill</h5>
                    <div class="d-flex justify-content-end">
                        <a id="btnPlus" class="btn btn-success"><i class="fa fa-plus"></i></a>
                    </div>
                    <div id="skillContainer">
                        @foreach (var item in Model.SkillList)
                        {
                            <script>
                                LoadData(@item)
                            </script>
                        }
                    </div>
                </div>
            </div>
            <div class="row mb-2">
                <div class="d-flex justify-content-end">
                    <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Update</button>
                </div>
            </div>
        </form>
    </div>
</div>

